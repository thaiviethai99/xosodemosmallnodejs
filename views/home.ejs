  <script type="text/javascript">
    $(function () {
        $('.data-table').DataTable();
        $('#datetimepicker12').datetimepicker({
            inline: true,
            format: 'YYYY-MM-DD',
            defaultDate:'<%= currentToday %>'
        });
        $("#datetimepicker12").on("dp.change", function (e) {
               var currentDate = moment(e.date.toDate()).format('DD-MM-YYYY');
               //redirect
               location.href='<%= global.urlDomain %>/ket-qua-xo-so/'+currentDate;
        });
    });
</script>
<script type="text/javascript">
    $(function(){
        $('#btnGetResult').click(function(e){
            $('#divResult').LoadingOverlay("show");
            var currentDatePicker=$('#currentDatePicker').val();
            $.ajax({
                url: "<%= global.urlDomain %>/xoso/"+currentDatePicker,
                loadingClass: "loading-circle",
                dataType: 'json',
                method: 'get',
                success: function(result) {
                    if (result.info == 'success') {
                        var link='<%= global.urlDomain %>/ket-qua-xo-so/'+currentDatePicker;
                        location.href=link;
                    } else {
                        alert("Lỗi")
                    }
                    $('#divResult').LoadingOverlay("hide");
                }
            });
            return false;
        });
    })
</script>
